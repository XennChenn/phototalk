<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading text-center">
				<h2>New Post</h2>
			</div>
			<div class="panel-body">
				<%= form_for @photo do |f| %>
					<div class="form-group">
						<%= f.text_field :pic, class: "form-control" %>
					</div>

					<div class="form-group">
						<%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Write a caption..." %>
					</div>

					<div class="action">
						<%= f.submit "Share", class: "btn btn-primary" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>